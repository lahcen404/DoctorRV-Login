<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>DoctorRegisterServlet</servlet-name>
        <servlet-class>com.CONTROLLER.DoctorRegisterServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for Doctor Register -->
    <servlet-mapping>
        <servlet-name>DoctorRegisterServlet</servlet-name>
        <url-pattern>/DoctorRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientRegisterServlet</servlet-name>
        <servlet-class>com.CONTROLLER.PatientRegisterServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for Doctor Register -->
    <servlet-mapping>
        <servlet-name>PatientRegisterServlet</servlet-name>
        <url-pattern>/PatientRegister</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>  <!-- Timeout in minutes -->
    </session-config>
 <welcome-file-list>
     <welcome-file>Home.jsp</welcome-file>
 </welcome-file-list>
</web-app>
